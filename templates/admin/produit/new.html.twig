{% extends 'base.html.twig' %}

{% block title %}Nouveau produit{% endblock %}

{% block body %}
    <h1>Créer un nouveau produit</h1>

    <div class="row">
        <div class="col-md-6">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.price) }}
                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.price) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.category) }}
                {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.category) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                {{ form_errors(form.description) }}
            </div>

            <button type="submit" class="btn btn-success">Créer le produit</button>
            <a href="{{ path('app_admin_produit_index') }}" class="btn btn-secondary">Annuler</a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
